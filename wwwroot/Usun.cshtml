@model FilmLibraryApp.Models.Film

<h2>Czy na pewno chcesz usunąć ten film?</h2>

<form asp-action="Usun">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Tytul"></label>
        <input asp-for="Tytul" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Tworca"></label>
        <input asp-for="Tworca" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Dlugosc"></label>
        <input asp-for="Dlugosc" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <textarea asp-for="Opis" class="form-control" disabled></textarea>
    </div>
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>