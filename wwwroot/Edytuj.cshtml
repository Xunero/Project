@model FilmLibraryApp.Models.Film

<h2>Edytuj film</h2>

<form asp-action="Edytuj">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Tytul"></label>
        <input asp-for="Tytul" class="form-control" />
        <span asp-validation-for="Tytul" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tworca"></label>
        <input asp-for="Tworca" class="form-control" />
        <span asp-validation-for="Tworca" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dlugosc"></label>
        <input asp-for="Dlugosc" class="form-control" />
        <span asp-validation-for="Dlugosc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>